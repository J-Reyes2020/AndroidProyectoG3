<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductosActivity"
    >

    <Button
        android:id="@+id/btn_comprar"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200sp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="5dp"
        android:text="Aceptar Compra"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_cancelar_compra"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="200sp"
        android:layout_marginBottom="5dp"
        android:onClick="onclickCancelarCompra"
        android:text="cancelar Compra"
        android:textSize="15sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_listar_productos"
        android:layout_width="match_parent"
        android:layout_height="671dp"
        android:layout_above="@+id/btn_cancelar_compra"
        android:layout_marginBottom="7dp" />

</RelativeLayout>