<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientesCrudActivity"
    android:background="@color/negro"
    >
    

    <TextView
        android:id="@+id/tv_tit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Â¿Que desea realizar?"
        android:gravity="center_horizontal"
        android:layout_marginRight="100sp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="200sp"
        android:textColor="@color/blanco"
        />

    <Button
        android:id="@+id/btn_agregar_cliente_crud"
        android:layout_width="113dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_tit"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="249dp"
        android:layout_marginRight="249dp"
        android:background="@drawable/boton_redondo"
        android:gravity="center_horizontal"
        android:onClick="onClickAgregarClienteCrud"
        android:text="Agregar"
        android:textColor="@color/blanco"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btn_eliminar_cliente_crud"
        android:layout_width="112dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_tit"
        android:layout_marginLeft="250sp"
        android:layout_marginTop="41dp"
        android:background="@drawable/boton_redondo"
        android:onClick="onclickEliminarClienteCrud"
        android:text="Eliminar"
        android:textColor="@color/blanco"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btn_actualizar_cliente_crud"
        android:layout_width="121dp"
        android:layout_height="36dp"
        android:layout_below="@+id/btn_eliminar_cliente_crud"
        android:layout_marginTop="20dp"
        android:layout_marginRight="250sp"
        android:background="@drawable/boton_redondo"
        android:onClick="onClickActualizarClienteCrud"
        android:text="Actualizar"
        android:textColor="@color/blanco"
        android:textSize="10sp" />

</RelativeLayout>