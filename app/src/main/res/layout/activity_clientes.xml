<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientesActivity"
    android:background="@color/negro"
    >

    <Button
        android:id="@+id/btn_salir_cliente"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/boton_redondo"
        android:onClick="onclikSalirCliente"
        android:text="Salir"
        android:textColor="@color/blanco"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_agregar_cliente"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/boton_redondo"
        android:onClick="onclickModificar"
        android:text="Modificar"
        android:textColor="@color/blanco"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cliente_recycler"
        android:layout_width="match_parent"
        android:layout_height="626dp"
        android:layout_above="@+id/btn_salir_cliente"
        android:layout_marginBottom="17dp" />
</RelativeLayout>