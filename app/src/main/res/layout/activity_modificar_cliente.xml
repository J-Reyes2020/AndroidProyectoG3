<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarCliente">

    <TextView
        android:id="@+id/tv_titulo_clientes_crud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar Clientes"
        android:gravity="center_horizontal"
        android:layout_marginTop="50sp"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/et_id_cliente_modificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/tv_titulo_clientes_crud"
        android:textSize="20sp"
        android:hint="Código"
        android:gravity="center_horizontal"
        android:layout_marginRight="60sp"
        android:layout_marginLeft="60sp"
        />
    <EditText
        android:id="@+id/et_nombre_cliente_modificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/et_id_cliente_modificar"
        android:textSize="20sp"
        android:hint="Nombre"
        android:gravity="center_horizontal"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        />
    <EditText
        android:id="@+id/et_apellido_cliente_modficar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/et_nombre_cliente_modificar"
        android:textSize="20sp"
        android:hint="Apellido"
        android:gravity="center_horizontal"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        />
    <EditText
        android:id="@+id/et_telefono_cliente_modificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/et_apellido_cliente_modficar"
        android:textSize="20sp"
        android:hint="Teléfono"
        android:gravity="center_horizontal"
        android:layout_marginRight="60sp"
        android:layout_marginLeft="60sp"
        />
    <EditText
        android:id="@+id/et_direccion_cliente_modificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/et_telefono_cliente_modificar"
        android:gravity="center_horizontal"
        android:hint="Dirección"
        android:textSize="20sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        />
    <EditText
        android:id="@+id/et_correp_cliente_modificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_direccion_cliente_modificar"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:hint="E-mail"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        />
    <Button
        android:id="@+id/btn_modificar_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_correp_cliente_modificar"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="Modificar"
        android:layout_marginRight="95sp"
        android:layout_marginLeft="95sp"
        android:onClick="onClickMoficarCliente"
        />
    <Button
        android:id="@+id/btn_regresar_modificar_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_modificar_cliente"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="Regresar"
        android:layout_marginRight="95sp"
        android:layout_marginLeft="95sp"
        />
</RelativeLayout>